<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".gym.profile.GymProfile">

        <!-- Circle menu -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:tint="@color/design_default_color_background"
            app:backgroundTint="@color/design_default_color_primary"
            app:layout_constraintBottom_toTopOf="@+id/infoBlock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contentBlock"
            app:rippleColor="@color/design_default_color_background"
            app:srcCompat="@drawable/ic_add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_add"
            app:rippleColor="@color/stringColor"
            app:srcCompat="@drawable/ic_subscription" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_subscription"
            app:rippleColor="@color/stringColor"
            app:srcCompat="@drawable/ic_round" />

        <!-- Content Block -->
        <LinearLayout
            android:id="@+id/contentBlock"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/gymImgField"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:contentDescription="@string/gym_img_profile"
                android:focusable="true">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gymNameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="28dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </com.google.android.material.textview.MaterialTextView>

                <ImageView
                    android:id="@+id/abortTitleGymButton"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top"
                    android:layout_marginHorizontal="2dp"
                    android:adjustViewBounds="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:contentDescription="@string/delete_button"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_delete"
                    app:tint="@color/white">

                </ImageView>

                <ImageView
                    android:id="@+id/editTitleGymButton"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top"
                    android:layout_marginHorizontal="2dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:contentDescription="@string/edit_button"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="@color/design_default_color_on_primary">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

        <!-- Info Block -->
        <LinearLayout
            android:id="@+id/infoBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentBlock"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Frame -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:orientation="vertical">

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:baselineAligned="false"
                        android:weightSum="2"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/gymBoxEmail"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"

                            app:hintEnabled="true"
                            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:hint="@string/prompt_email"
                            android:textColorHint="@color/material_on_background_disabled"

                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="2dp"

                            app:endIconContentDescription="@string/edit_button"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_edit"
                            app:endIconTint="@color/colorPrimary"

                            app:startIconContentDescription="@string/mail_img"
                            app:startIconDrawable="@drawable/ic_mail"
                            app:startIconTint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/gymTxtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text|textEmailAddress|textEmailSubject"
                                android:selectAllOnFocus="false"
                                android:singleLine="true"
                                android:textColor="@color/material_on_background_emphasis_medium"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/gymEmailButtonRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0"
                            android:layout_gravity="end"
                            android:visibility="invisible">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/gymAbortMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="1dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:contentDescription="@string/delete_button"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:tint="@color/design_default_color_error"
                                app:srcCompat="@drawable/ic_delete" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/gymSaveMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="1dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:contentDescription="@string/save_button"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_save" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Key -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:baselineAligned="false"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/gymBoxKey"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:enabled="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"

                            app:hintEnabled="true"
                            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:hint="@string/prompt_password"
                            android:textColorHint="@color/material_on_background_disabled"

                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"

                            app:endIconContentDescription="@string/edit_button"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/ic_edit"
                            app:endIconTint="@color/colorPrimary"

                            app:startIconContentDescription="@string/key_img"
                            app:startIconDrawable="@drawable/ic_psw"
                            app:startIconTint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/gymTextKey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textVisiblePassword|textPassword|textWebPassword"
                                android:selectAllOnFocus="false"
                                android:singleLine="true"
                                android:text="@string/password_hide"
                                android:textColor="@color/material_on_background_emphasis_medium"
                                android:textStyle="bold" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/gymKeyButtonRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="0"
                            android:layout_gravity="center"
                            android:visibility="invisible">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/gymAbortKey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="1dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:contentDescription="@string/delete_button"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:tint="@color/design_default_color_error"
                                app:srcCompat="@drawable/ic_delete" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/gymSaveKey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="1dp"
                                android:adjustViewBounds="true"
                                android:clickable="true"
                                android:contentDescription="@string/save_button"
                                android:focusable="true"
                                android:scaleType="centerInside"
                                android:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/ic_save" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="0"
                            android:contentDescription="@string/phone_img"
                            app:srcCompat="@drawable/ic_phone"
                            app:tint="@color/colorPrimary">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/gymPhoneField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:textColor="@color/material_on_background_emphasis_high_type"
                                android:textSize="14sp"
                                android:textStyle="bold">

                            </com.google.android.material.textview.MaterialTextView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/phoneNumber"
                                android:textColor="@color/material_on_background_emphasis_medium"
                                android:textSize="14sp">

                            </com.google.android.material.textview.MaterialTextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/abortPhoneGymButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:clickable="true"
                                android:contentDescription="@string/delete_button"
                                android:focusable="true"
                                android:visibility="invisible"
                                app:srcCompat="@drawable/ic_delete"
                                app:tint="@color/design_default_color_error">

                            </ImageView>

                            <ImageView
                                android:id="@+id/editPhoneGymButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:clickable="true"
                                android:contentDescription="@string/edit_button"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_edit"
                                app:tint="@color/stringColorParagraph">

                            </ImageView>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="35dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_weight="0"
                            android:contentDescription="@string/location_img"
                            app:srcCompat="@drawable/ic_location"
                            app:tint="@color/colorPrimary">

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/gymAddressField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:textColor="@color/material_on_background_emphasis_high_type"
                                android:textSize="14sp"
                                android:textStyle="bold">

                            </com.google.android.material.textview.MaterialTextView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/prompt_address"
                                android:textColor="@color/material_on_background_emphasis_medium"
                                android:textSize="14sp">

                            </com.google.android.material.textview.MaterialTextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/abortAddressGymButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:clickable="true"
                                android:contentDescription="@string/delete_button"
                                android:focusable="true"
                                android:visibility="invisible"
                                app:srcCompat="@drawable/ic_delete"
                                app:tint="@color/design_default_color_error">

                            </ImageView>

                            <ImageView
                                android:id="@+id/editAddressGymButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:clickable="true"
                                android:contentDescription="@string/edit_button"
                                android:focusable="true"
                                app:srcCompat="@drawable/ic_edit"
                                app:tint="@color/stringColorParagraph">

                            </ImageView>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="5dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <androidx.fragment.app.FragmentContainerView
                                android:id="@+id/gymMapField"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:name="com.google.android.gms.maps.SupportMapFragment" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>