<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".gym.profile.FragmentGymSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_background">

        <!-- Abbonamenti -->
        <LinearLayout
            android:id="@+id/gymSubscribeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:lineSpacingExtra="24sp"
                android:text="@string/title_subcription"
                android:textColor="@color/quantum_grey600"
                android:textSize="14sp" />

            <!-- Switch container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Abbonamento mensile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:checked="true"
                        android:text="@string/monthly_subscription"

                        android:textColor="@color/quantum_grey900"
                        android:textSize="16sp"
                        app:thumbTint="@color/quantum_deeppurpleA700"
                        app:trackTint="@color/quantum_deeppurple100"
                        app:useMaterialThemeColors="false" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/monthly_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento trimestrale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:checked="true"
                        android:text="@string/quarterly_subscription"

                        android:textColor="@color/quantum_grey900"
                        android:textSize="16sp"
                        app:thumbTint="@color/quantum_deeppurpleA700"
                        app:trackTint="@color/quantum_deeppurple100"
                        app:useMaterialThemeColors="false" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/quarterly_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento semestrale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:checked="true"
                        android:text="@string/six_month_subscription"

                        android:textColor="@color/quantum_grey900"
                        android:textSize="16sp"
                        app:thumbTint="@color/quantum_deeppurpleA700"
                        app:trackTint="@color/quantum_deeppurple100"
                        app:useMaterialThemeColors="false" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/six_month_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento annuale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:checked="true"
                        android:text="@string/annual_subscription"

                        android:textColor="@color/quantum_grey900"
                        android:textSize="16sp"
                        app:thumbTint="@color/quantum_deeppurpleA700"
                        app:trackTint="@color/quantum_deeppurple100"
                        app:useMaterialThemeColors="false" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/annual_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View android:id="@+id/containerDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"

            android:background="?android:attr/dividerVertical"
            app:layout_constraintTop_toBottomOf="@+id/gymSubscribeContainer"
            app:layout_constraintBottom_toTopOf="@+id/gymTurnContainer" />

        <!-- Turni -->
        <LinearLayout
            android:id="@+id/gymTurnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@+id/containerDivider"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:lineSpacingExtra="24sp"
                android:text="@string/title_session"
                android:textColor="@color/quantum_grey600"
                android:textSize="14sp" />

            <!-- Check container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Turni mattutini -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/gymCardMorningTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:weightSum="2">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/morning_list_turn"
                                android:src="@drawable/ic_weather_sun" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:checked="true"

                                android:clickable="true"
                                android:focusable="true"
                                android:layoutDirection="rtl"

                                app:buttonTint="@color/quantum_deeppurpleA700" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            android:layout_marginTop="4dp"

                            android:text="@string/morning_session"
                            android:textColor="@color/quantum_grey900"
                            android:textSize="16sp"

                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="@color/quantum_grey900"/>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/first_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/second_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/third_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Turni pomeridiani -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/gymCardAfternoonTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:weightSum="2">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/afternoon_list_turn"
                                android:src="@drawable/ic_weather_afternoon" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:checked="true"

                                android:clickable="true"
                                android:focusable="true"
                                android:layoutDirection="rtl"

                                app:buttonTint="@color/quantum_deeppurpleA700" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            android:layout_marginTop="4dp"

                            android:text="@string/afternoon_session"
                            android:textColor="@color/quantum_grey900"
                            android:textSize="16sp"

                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="@color/quantum_grey900"/>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/first_afternoon_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/second_afternoon_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/third_afternoon_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Turni pomeridiani -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/gymCardEveningTurn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:weightSum="2">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/evening_list_turn"
                                android:src="@drawable/ic_weather_night" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:checked="true"

                                android:clickable="true"
                                android:focusable="true"
                                android:layoutDirection="rtl"

                                app:buttonTint="@color/quantum_deeppurpleA700" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            android:layout_marginTop="4dp"

                            android:text="@string/evening_session"
                            android:textColor="@color/quantum_grey900"
                            android:textSize="16sp"

                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="@color/quantum_grey900"/>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/first_evening_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/second_evening_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="true"
                                android:clickable="true"
                                android:focusable="true"

                                app:buttonTint="@color/quantum_deeppurpleA700"

                                android:text="@string/third_evening_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>