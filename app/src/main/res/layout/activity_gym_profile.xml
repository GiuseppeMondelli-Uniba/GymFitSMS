<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gym.profile.GymProfile">

    <include
        android:id="@+id/include"
        layout="@layout/content_gym_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Block -->
    <LinearLayout
        android:id="@+id/contentBlock"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Detail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <!-- Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/logo"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="0.5dp"
                app:civ_circle_background_color="@color/white">

            </de.hdodenhof.circleimageview.CircleImageView>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/gym_name_default"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <!-- CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/gymProfileCardView"
            android:layout_width="320dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Orari -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:drawableTop="@android:drawable/ic_menu_my_calendar"
                        android:text="@string/gym_button_calendar"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

                <!-- Mappa -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:drawableTop="@android:drawable/ic_menu_mapmode"
                        android:text="@string/gym_button_map"
                        android:textColor="@color/white">

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Info block -->
    <LinearLayout
        android:id="@+id/infoBlock"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentBlock"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="vertical">

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:paddingStart="35dp"
            android:paddingEnd="0dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                app:srcCompat="@android:drawable/ic_dialog_email"
                app:tint="@color/colorPrimary">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/gym_email_default"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <!-- Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:paddingStart="35dp"
            android:paddingEnd="0dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                app:srcCompat="@android:drawable/stat_sys_phone_call"
                app:tint="@color/colorPrimary">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/gym_number_default"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <!-- Andress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:paddingStart="35dp"
            android:paddingEnd="0dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="center"
                app:srcCompat="@android:drawable/ic_dialog_map"
                app:tint="@color/colorPrimary">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/gym_andress_default"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </LinearLayout>

    <!-- Circle menu -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>