<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gym.main.FragmentGymSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/quantum_grey50">

        <!-- Abbonamenti -->
        <LinearLayout
            android:id="@+id/gymSubscribeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:lineSpacingExtra="24sp"
                android:text="@string/title_subcription"
                android:textColor="@color/quantum_grey600"
                android:textSize="14sp" />

            <!-- Switch container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Abbonamento mensile -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/monthly_subscription_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/monthly_subscription"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/monthly_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento trimestrale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/quarterly_subscription_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/quarterly_subscription"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/quarterly_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento semestrale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/six_month_subscription_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/six_month_subscription"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/six_month_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Abbonamento annuale -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/annual_subscription_switch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/annual_subscription"
                        android:textSize="16sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/annual_subscription_description"
                        android:textColor="@color/quantum_grey600"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View android:id="@+id/containerDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginStart="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"

            android:background="?android:attr/dividerVertical"
            app:layout_constraintTop_toBottomOf="@+id/gymSubscribeContainer"
            app:layout_constraintBottom_toTopOf="@+id/gymTurnContainer" />

        <!-- Turni -->
        <LinearLayout
            android:id="@+id/gymTurnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@+id/containerDivider"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"

                android:lineSpacingExtra="24sp"
                android:text="@string/title_session"
                android:textColor="@color/quantum_grey600"
                android:textSize="14sp" />

            <!-- Check container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <!-- Turni mattutini -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/morning_list_img"
                                android:src="@drawable/ic_weather_sun" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/morning_turn_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"

                                    android:checked="false"

                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/morning_turn_text"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:enabled="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"

                            app:hintEnabled="false"
                            app:helperTextEnabled="false"
                            app:errorEnabled="false"
                            app:counterEnabled="false"

                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"

                            app:endIconMode="custom"
                            app:endIconContentDescription="@string/morning_list_img"
                            app:endIconDrawable="@drawable/ic_arrow_down"
                            app:endIconTint="@color/quantum_grey600">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"

                                android:inputType="none"

                                android:text="@string/morning_session"
                                android:textColor="@color/quantum_grey900"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:id="@+id/morning_turn_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/morning_turn_first_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/first_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/morning_turn_second_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/second_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/morning_turn_third_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/third_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Turni pomeridiani -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/evening_list_img"
                                android:src="@drawable/ic_weather_afternoon" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/afternoon_turn_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"

                                    android:checked="false"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/afternoon_turn_text"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:enabled="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"

                            app:hintEnabled="false"
                            app:helperTextEnabled="false"
                            app:errorEnabled="false"
                            app:counterEnabled="false"

                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"

                            app:endIconMode="custom"
                            app:endIconContentDescription="@string/afternoon_list_img"
                            app:endIconDrawable="@drawable/ic_arrow_down">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"

                                android:enabled="false"

                                android:text="@string/afternoon_session"
                                android:textColor="@color/quantum_grey900"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:id="@+id/afternoon_turn_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/afternoon_turn_first_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/first_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/afternoon_turn_second_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/second_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/afternoon_turn_third_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/third_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Turni pomeridiani -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/quantum_grey50"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/evening_list_img"
                                android:src="@drawable/ic_weather_night" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/evening_turn_checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"

                                    android:checked="false"
                                    android:clickable="true"
                                    android:focusable="true" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/dividerVertical" />

                        <!-- Title, secondary and supporting text -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/evening_turn_text"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:enabled="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"

                            app:hintEnabled="false"
                            app:helperTextEnabled="false"
                            app:errorEnabled="false"
                            app:counterEnabled="false"

                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"

                            app:endIconMode="custom"
                            app:endIconContentDescription="@string/evening_list_img"
                            app:endIconDrawable="@drawable/ic_arrow_down">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"

                                android:enabled="false"

                                android:text="@string/evening_session"
                                android:textColor="@color/quantum_grey900"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- List checkbox -->
                        <LinearLayout
                            android:id="@+id/evening_turn_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/evening_turn_first_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/first_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/evening_turn_second_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/second_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/evening_turn_third_checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"

                                android:text="@string/third_morning_session"
                                android:textDirection="ltr"
                                android:layoutDirection="rtl" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView >